rem Create the main window, define its ON_CLOSE callback, and set its layout and other CSS
rem ================================================================================
mySysGui! = BBjAPI().openSysGui("X0")
rem 01101083 = no title bar, dynamic flow layout,initially maximized,allow max/min, allow resize, close box
win! = mySysGui!.addWindow("TaskApp", $01101083$)
rem win! = BBjAPI().openSysGui("X0").addWindow("Hello BBj DWC", $01101083$)

win!.setCallback(BBjAPI.ON_CLOSE, "onClose")
win!.setPanelStyle("display","inline-grid")
win!.setPanelStyle("grid-template-columns","1fr 2fr")
win!.setPanelStyle("gap","5px")
win!.setPanelStyle("padding","15px")


st! = win!.addStaticText("Static Text")
ed_firstname! = win!.addEditBox("")
win!.setCallback(BBjAPI.ON_CLOSE,"exit")

process_events

exit:
    release